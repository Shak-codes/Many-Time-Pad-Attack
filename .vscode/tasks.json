{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run WordTrieTest",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-g",
                "${workspaceFolder}/WordTrie/WordTrie.test.cc",
                "${workspaceFolder}/WordTrie/WordTrie.cc",
                "-o",
                "${workspaceFolder}/WordTrie/WordTrie.test.exe"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building SfxTrieTest"
        },
        {
            "label": "Run SfxTrieTest",
            "type": "shell",
            "command": "${workspaceFolder}/SfxTrie/SfxTrie.test.exe",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build and Run WordTrie",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-g",
                "${workspaceFolder}/WordTrie/WordTrie.cc",
                "${workspaceFolder}/WordTrie/main.cc",
                "-o",
                "${workspaceFolder}/WordTrie.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building SfxTrieTest"
        },
    ]
}

